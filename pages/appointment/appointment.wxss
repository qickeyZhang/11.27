/* pages/appointment/appointment.wxss */
.bj image{
  width: 100%;
  height: 410rpx;
  display: block;
}
.main{
  overflow: hidden;
  margin-top: -45rpx;
  background: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.main>view:first-child{
  font-size: 24rpx;
  color: #b3b3b3;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 20rpx;
}
.ul{
  padding: 0 40rpx;
}
.ul .li{
  box-sizing: border-box;
  height: 95rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e7e7e7;
  font-size: 30rpx;
  color: #494949;
  padding: 0 15rpx;
}
.li view{
  width: 30%;
}
.li input{
  flex: 1;
  border: none;
  outline: none;
  background: none;
  height: 95rpx;
  line-height: 95rpx;
  color: #b3b3b3;
  padding-left: 25%; 
}
.li image{
  width: 20rpx;
  height: 36rpx;
}
.button{
  margin: 33rpx auto;
  width: 640rpx;
  background: #99c8f6;
  color: white;
  font-size: 30rpx;
  text-align: center;
  height: 94rpx;
  line-height: 94rpx;
  border-radius: 10rpx;
}