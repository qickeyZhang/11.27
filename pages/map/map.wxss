.input{
  width: 515rpx;
  font-size: 24rpx;
  border: 1px solid #b8b8b8;
  border-radius: 33rpx;
  height: 66rpx;
  flex: 1;
  margin: 5rpx auto 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.input image{
  width: 25rpx;
  height: 25rpx;
  margin-left: 38rpx;
  margin-right: 25rpx;
}
input{
  flex: 1;
}

.ul{
  padding: 0 54rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  height: 85rpx;
  line-height: 85rpx; 
  background: black;
  opacity: 0.3;
}
.li{
  border: none;
  color: #fff;
  font-size: 30rpx;
  font-weight: normal;
}
