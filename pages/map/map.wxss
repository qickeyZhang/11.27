.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 332rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 54rpx;
  box-sizing: border-box;
  background: #f4f4f4;
}
.footer>image{
  width: 281rpx;
  height: 202rpx;
  display: block;
  margin-right: 40rpx;
}
.right{
  display: flex;
  justify-content: space-between;
  height: 202rpx;
  flex-direction: column;
}
.right>view{
  font-size: 24rpx;
  color: #7d7d7e;
}
.right .name{
  font-size: 30rpx;
  color: #373737;
}
