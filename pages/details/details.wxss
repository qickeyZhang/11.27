/* pages/details/details.wxss */
page{
  padding-bottom: 120rpx;
}
.bj image{
  width: 100%;
  height: 430rpx;
  display: block;
}
.main{
  margin-top: -30rpx;
  background: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.header{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 40rpx 54rpx;
}
.header view:first-child{
  font-size: 30rpx;
  font-weight: bold;
}
.header view:last-child{
  font-size: 28rpx;
  color: #b3b3b3;
}
.biaoqian{
  padding: 0 54rpx;
}
.biaoqian>view{
  width: 160rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  border-radius: 5rpx;
  color: #e7e7e7;
  border: 1px solid #e7e7e7;
  float: left;
  margin-right: 10rpx;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.address{
  clear: both;
  font-size: 24rpx;
  color: #707070;
  padding: 25rpx 54rpx 45rpx;
}
.h1{
  padding: 0 54rpx;
  font-size: 34rpx;
  color: #56a3f3;
  margin-bottom: 25rpx;
}
.wei{
  font-size: 26rpx;
  color: #e7e7e7;
  padding: 0 54rpx;
}
.ul{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 54rpx 60rpx;
  /* overflow: hidden; */
}
.ul .li{
  float: left;
  width: 100rpx;
  height: 100rpx;
  border: 2px solid #e7e7e7;
  border-radius: 50%;
  overflow: hidden;  
}
.ul .li:not(:first-child){
  margin-left: -50rpx;
}
.ul .li image{
  width: 100%;
  height: 100%;
  display: block;
}
.footer{
  box-sizing: border-box;
  width: 100%;
  position: fixed;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 54rpx;
  background: #f1f1f1;
  bottom: 0;
  left: 0;
}
.footer>view:first-child{
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex: 1;
}
.button{
  width: 190rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #56a3f3;
  color: white;
  font-size: 22rpx;
}
.ol .li{
  font-size: 22rpx;
  color: #b3b3b3;
  text-align: center;
}
.ol .li:first-child image{
  width: 45rpx;
  height: 40rpx;
}
.ol .li:nth-child(2) image{
  width: 55rpx;
  height: 40rpx;
}
.ol .li:last-child image{
  width: 40rpx;
  height: 40rpx;
}
.tou{
  padding: 0 54rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 45rpx 0;
}
.tou view:first-child{
  font-size: 30rpx;
  color: #707070;
}
.tou view:first-child text{
  color: #4a4949;  
}
.touxiang .li{
  width: 64rpx;
  height: 64rpx;
  float: right;
  margin-left: -10rpx;
}
.touxiang .li image{
  box-sizing: border-box;
  border: 2px solid #e7e7e7;  
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}
.sec{
  padding: 0 54rpx 45rpx;
}
.sec .h6{
  font-size: 36rpx;
  color: #4a4949;
  margin-bottom: 45rpx;
}
.sec .con{
  overflow: hidden;
  font-size: 30rpx;
  color: #707070;
  line-height: 50rpx;
}
.open{
  width: 115rpx;
  color: #55a3f2;
  font-size: 30rpx;
  margin: 30rpx auto 0;
  overflow: hidden;
}
.open view{
  float: left;
}
.open image{
  margin-top: 8rpx;
  width: 43rpx;
  height: 24rpx;
  display: block;
  float: right;
}
.xinxi{
  font-size: 30rpx;
  color: #707070;
}
.xinxi_list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.xinxi .xinxi_list:last-child{
  margin-bottom: 0;  
}
/* 横向轮播 */
.scroll-view_H{
  box-sizing: border-box;
  white-space: nowrap;
}
.scroll-view-item_H{
  display: inline-block;
  margin-right: 20rpx;  
  font-size: 30rpx;
  color: #9b9b9b;
}
.scroll-view-item_H.lii{
  margin-right: 0;
}
.scroll-view-item_H>image{
  width: 468rpx;
  height: 320rpx;
  display: block;
}
#dong{
  width: 458rpx;
  box-sizing: border-box;
  padding: 30rpx;
  margin: 10rpx;
  box-shadow:#ccc 0 0 10rpx;
  border-radius: 10rpx;
}
#dong view:first-child{
  font-size: 30rpx;
  color: #4a4949;
  font-weight: bold;
}
#dong view:nth-child(2){
  margin: 30rpx 0 60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
/* end */
/* 展开 */
.hiddenmore{
  height: 200rpx;
}
.hiddenmorexx{
  height: 250rpx;
}
.showmore{
  height: auto;
}