/* pages/compile/compile.wxss */
.header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 54rpx;
}
.header view:first-child{
  flex: 1;
}
.header image{
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.header>view:not(:first-child){
  width: 125rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius: 33rpx;
}

.header view:nth-child(2){
  font-size: 30rpx;
  color: #bfbfbf;
  border: 1px solid #f4f4f5;
  margin-right: 37rpx;
}
.header view:last-child{
  font-size: 30rpx;
  color: white;
  background: #55a3f2;
}
.title{
  position: relative;
  margin: 20rpx 54rpx 0;
  border-bottom: 1px solid #e6e6e6;
}
.title input{
  height: 110rpx;
  line-height: 110rpx;
  text-align: right;
  font-size: 30rpx;
  color: #bfbfbf;
}
.title view{
  color: #201a3e;
  position: absolute;
  font-size: 36rpx;
  left: 28rpx;
  bottom: 36rpx;
  font-weight: bold;
}
.zheng{
  height: 180rpx;
  line-height: 180rpx;
  font-size: 30rpx;
  color: #bfbfbf;
  padding-left: 82rpx; 
  margin-bottom: 20rpx;
}
.ul{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
  margin: 0 54rpx;
  border-bottom: 1px solid #e3e3e3
}
.ul .li{
  box-sizing: border-box;
  text-align: center;
  width: 50%;
}
.ul .li:first-child view:first-child{
  border-right: 1px solid #e2e2e2
}
.ul image{
  width: 112rpx;
  height: 112rpx;
}
.ul .li view:last-child{
  font-size: 30rpx;
  color: #858585;
  margin: 60rpx 0 200rpx;
}
.ol{
  padding: 0 54rpx;
}
.ol .li{
  border-bottom: 1px solid #e6e6e6;
  height: 88rpx;
  color: #bfbfbf;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ol .li image:first-child{
  width: 40rpx;
  height: 40rpx;
  margin-left: 28rpx;
}
.ol .li view{
  margin-left: 53rpx;
  flex: 1; 
}
.ol .li:nth-child(2) image:first-child{
  width: 32rpx;
  margin: 0 4rpx 0 32rpx;
}
.ol .li image:last-child{
  width: 20rpx;
  height: 35rpx;
}
.sub{
  background: #55A3F2;
  color: #f5f5f5;
  font-size: 32rpx;
  border-radius: 10rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  width: 643rpx;
  margin: 33rpx auto;
}